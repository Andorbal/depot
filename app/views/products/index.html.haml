%h1 Listing products

%table
  - @products.each do |product|
    %tr{class: cycle('list_line_odd', 'list_line_even')}
      %td= image_tag product.image_url, class: 'list_image'
      %td.list_description
        %dl
          %dt= product.title
          %dd= truncate(strip_tags(product.description), 
                        length: 80)
      %td.list_actions
        %div= link_to 'Show', product
        %div= link_to 'Edit', edit_product_path(product)
        %div= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete
%br

= link_to 'New Product', new_product_path

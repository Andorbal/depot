%tr{id: line_item == @current_item && 'current_item'}
  %td= "#{line_item.quantity}x"
  %td= line_item.product_title
  %td.item_price= number_to_currency line_item.total_price
  %td
    = button_to 'x', line_item, method: :delete,
                     confirm: "Are you sure?",
                     remote: true
    = button_to '-', decrement_line_item_path(line_item),
                     remote: true